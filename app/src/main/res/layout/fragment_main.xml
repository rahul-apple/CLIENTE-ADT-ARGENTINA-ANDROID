<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:background="@color/white_button_background"
    android:layout_height="match_parent" tools:context=".MainActivity$PlaceholderFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/white_button_background"
        android:weightSum="6">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:scaleType="centerCrop"
            android:src="@drawable/top_image"
            android:contentDescription="BannerImage" />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@color/white_button_background"
            android:layout_weight="4"
            android:paddingBottom="10dp"
            android:paddingTop="10dp"
            android:paddingLeft="25dp"
            android:paddingRight="25dp">


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:layout_toLeftOf="@+id/fragment_main_btn_chat">

                <Button
                    android:id="@+id/fragment_main_btn_knowledge_base"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBaseline="@+id/fragment_main_btn_chat"
                    android:background="@color/transparent"
                    android:drawableTop="@drawable/centro_de_ayuda"
                    android:gravity="center"
                    android:text="@string/fragment_main_btn_knowledge_base"
                    android:textColor="@color/colorPrimary"
                    android:textSize="10sp" />

                <Button
                    android:id="@+id/fragment_main_my_app"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/fragment_main_btn_knowledge_base"
                    android:background="@color/transparent"
                    android:drawableTop="@drawable/mis_aplicaciones"
                    android:gravity="center"
                    android:text="@string/fragment_main_btn_my_app"
                    android:textColor="@color/colorPrimary"
                    android:textSize="10sp" />
            </LinearLayout>


            <Button
                android:id="@+id/fragment_main_btn_my_tickets"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="5dp"
                android:background="@color/transparent"
                android:drawableTop="@drawable/panel_de_control"
                android:maxWidth="40dp"
                android:text="@string/fragment_main_btn_my_tickets"
                android:textColor="@color/colorPrimary"
                android:textSize="10sp" />

            <Button
                android:id="@+id/fragment_main_btn_chat"
                android:layout_margin="5dp"
                android:layout_below="@+id/fragment_main_btn_my_tickets"
                android:layout_width="176dp"
                android:layout_height="126dp"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:layout_marginBottom="8dp"
                android:background="@drawable/assistant_logo" />


            <Button
                android:id="@+id/fragment_main_btn_facturas"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_below="@+id/fragment_main_btn_chat"
                android:layout_centerHorizontal="true"
                android:background="@color/transparent"
                android:drawableTop="@drawable/mis_facturas"
                android:text="@string/fragment_main_btn_my_facturas"
                android:textColor="@color/colorPrimary"
                android:textSize="10sp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:layout_toRightOf="@+id/fragment_main_btn_chat">

                <Button
                    android:id="@+id/fragment_main_btn_contact_us"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/transparent"
                    android:drawableTop="@drawable/contacto_clientes"
                    android:gravity="center"
                    android:text="@string/fragment_main_btn_contact_us"
                    android:textColor="@color/colorPrimary"
                    android:textSize="10sp" />

                <Button
                    android:id="@+id/fragment_main_btn_rate_the_app"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/transparent"
                    android:drawableTop="@drawable/mis_datos"
                    android:gravity="center"
                    android:text="@string/fragment_main_btn_my_profile"
                    android:textColor="@color/colorPrimary"
                    android:textSize="10sp" />
            </LinearLayout>


        </RelativeLayout>

    </LinearLayout>


</ScrollView>
