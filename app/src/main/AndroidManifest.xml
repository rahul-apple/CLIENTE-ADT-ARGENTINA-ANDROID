<?xml version="1.0" encoding="utf-8"?><manifest xmlns:android="http://schemas.android.com/apk/res/android"          xmlns:tools="http://schemas.android.com/tools"          package="com.zendesk.adtapp" >    <!-- Storage permissions needed by Chat SDK -->    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>    <uses-permission android:name="android.permission.WAKE_LOCK"/>    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>    <uses-permission android:name="android.permission.INTERNET"/>    <application        android:allowBackup="true"        android:icon="@mipmap/ic_launcher"        android:usesCleartextTraffic="true"        android:label="@string/app_name"        tools:replace="android:theme"        android:theme="@style/AppTheme"        android:name=".Global">        <uses-library            android:name="org.apache.http.legacy"            android:required="false" />        <activity android:name=".ui.SplashActivity"            android:label="@string/app_name"            android:screenOrientation="portrait">            <intent-filter>                <action android:name="android.intent.action.MAIN" />                <category android:name="android.intent.category.LAUNCHER" />            </intent-filter>        </activity>        <activity android:name=".ui.IntroActivity"            ></activity>        <activity android:name=".ui.InteractiveSecurityActivity"            ></activity>        <activity android:name=".ui.WebActivity"            ></activity>        <activity            android:name=".ui.MainActivity"            android:label="@string/app_name"            android:screenOrientation="portrait">        </activity>        <activity android:name=".ui.HomeActivity"            android:label="Crear ticket" />        <activity android:name=".ui.CreateTicketActivity"            android:label="Crear ticket" />        <activity android:name=".ui.RootViewActivity"            android:label="@string/app_name"            android:screenOrientation="portrait">        </activity>        <activity            android:name=".ui.CreateProfileActivity"            android:label="@string/title_activity_create_profile" />        <activity            android:name=".ui.MyApplicationActivity"            android:label="@string/fragment_main_btn_my_app" />        <activity            android:name=".ui.ForgotPasswordActivity"            android:label="@string/fragment_forgot_pass" />        <activity            android:name=".ui.ProfileActivity"            android:label="@string/title_activity_profile" />        <receiver android:name=".LocalNotification"            android:exported="false"/>        <!-- Firebase services -->        <service            android:name=".push.ZendeskFirebaseMessagingService"            android:exported="false">            <intent-filter>                <action android:name="com.google.firebase.MESSAGING_EVENT" />            </intent-filter>        </service>        <service            android:name=".push.ZendeskFirebaseInstanceIdService"            android:exported="false">            <intent-filter>                <action android:name="com.google.firebase.INSTANCE_ID_EVENT" />            </intent-filter>        </service>        <meta-data android:name="com.google.firebase.messaging.default_notification_icon"            android:resource="@drawable/ic_stat_ic_stat_name" />        <meta-data            android:name="io.fabric.ApiKey"            android:value="704e8f6cf134adf179899ccc5f061446e7ea4e91" />    </application></manifest>